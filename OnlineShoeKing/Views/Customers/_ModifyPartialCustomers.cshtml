

<div id="ControlNavigationId">
    <div class="bottom-grids collections">
        <!---start-product-details--->
        <div class="product-details">
           
            <div class="panel-body">
                <script type="text/javascript">
                    document.title = 'Customers';
                    window.history.pushState(
                        null,
                        null,
                        '/Founder/Customers/Modify?email=@TempData["modifyCustomerEmail"]'
                        );
                </script>
                <div class="col-md-10 col-md-offset-3">
                    @using (Ajax.BeginForm("ModifyCustomers", "Customers", new AjaxOptions()
            {
                HttpMethod = "Post",
                UpdateTargetId = "ControlNavigationId",
                InsertionMode = InsertionMode.Replace
            }, new { @class = "form-horizontal col-md-6" }))
            {
            @Html.AntiForgeryToken()


                        <h3 class="text-center text-danger">@OnlineShoeShopAndChat.Resources.Language.ChangeAccountSettingsTitle</h3>
                        <hr /><br />

                        <div class="form-group">
                            <div class="col-md-3 control-label">@OnlineShoeShopAndChat.Resources.Language.EmailTitle*</div>
                            <div class="col-md-8">
                                <input type="text" name="email" value="@TempData["modifyCustomerEmail"]" class="form-control" />
                                <span class="text-center text-danger">@TempData["emailValidation"]</span>
                                <span class="text-center text-danger">@TempData["email"]</span>
                            </div>
                        </div>
                        <br />

                        <div class="form-group">
                            <div class="col-md-3 control-label">@OnlineShoeShopAndChat.Resources.Language.FirstNameTitle*</div>
                            <div class="col-md-8">
                                <input type="text" name="firstName" value="@TempData["modifyCustomerFirstName"]" class="form-control" />
                                <span class="text-center text-danger">@TempData["firstName"]</span>
                            </div>
                        </div>
                        <br />

                        <div class="form-group">
                            <div class="col-md-3 control-label">@OnlineShoeShopAndChat.Resources.Language.LastNameTitle*</div>
                            <div class="col-md-8">
                                <input type="text" name="lastName" value="@TempData["modifyCustomerLastName"]" class="form-control" />
                                <span class="text-center text-danger">@TempData["lastName"]</span>
                            </div>
                        </div>
                        <br />

                        <div class="form-group">
                            <div class="col-md-3 control-label">@OnlineShoeShopAndChat.Resources.Language.GenderTitle*</div>
                            <div class="col-md-3">
                                <select name="gender" id="gender" class="form-control">
                                    <option value="0">@OnlineShoeShopAndChat.Resources.Language.MrTitle</option>
                                    <option value="1">@OnlineShoeShopAndChat.Resources.Language.MsTitle</option>
                                    <option value="2">@OnlineShoeShopAndChat.Resources.Language.MrsTitle</option>
                                </select>
                            </div>
                        </div>
                        <br />

                        <div class="form-group">
                            <div class="col-md-3 control-label">@OnlineShoeShopAndChat.Resources.Language.RoleTitle*</div>
                            <div class="col-md-3">
                                <select name="role" id="role" class="form-control">
                                    <option value="0">@OnlineShoeShopAndChat.Resources.Language.UserTitle</option>
                                    <option value="1">@OnlineShoeShopAndChat.Resources.Language.AdminTitle</option>
                                </select>
                            </div>
                        </div>
                        <br />

                        <div class="form-group">
                            <div class="col-md-3 control-label">@OnlineShoeShopAndChat.Resources.Language.NewPasswordTitle*</div>
                            <div class="col-md-8">
                                <input type="text" name="password" class="form-control" />
                                <span class="text-center text-danger">@TempData["password"]</span>
                            </div>
                        </div>
                        <br />

                        <div class="inlineButtonsModify">
                     
                                <input type="submit" value="@OnlineShoeShopAndChat.Resources.Language.SaveBtn" class="btn btn-success btn-lg" />
                          
                     

                                @Ajax.ActionLink(@OnlineShoeShopAndChat.Resources.Language.BackTitle, "IndexPartialCustomers", "Customers",
                            new AjaxOptions
                            {
                                UpdateTargetId = "ControlNavigationId",
                                InsertionMode = InsertionMode.Replace,
                                HttpMethod = "Get"
                            }, new { @class = "btn btn-warning btn-lg" })

                       
                        </div>
                    }
                </div>
                </div>
        </div>
    </div>
 </div>

<script>

    $("#gender > option").each(function () {
        if(this.value == '@TempData["modifyCustomerGenter"]')
        {
            $(this).attr('selected', true);
        }
    });

    if (('@TempData["modifyCustomerRole"]' != null) || ('@TempData["modifyCustomerRole"]' != '')) {
        $("#role > option").each(function () {
            if (this.value == '@TempData["modifyCustomerRole"]') {
                $(this).attr('selected', true);
            }
        });
    }

</script>