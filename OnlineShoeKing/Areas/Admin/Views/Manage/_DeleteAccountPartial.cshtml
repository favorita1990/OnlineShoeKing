@model OnlineShoeShopAndChat.Models.UserModel


<div id="ControlNavigationId">
    <div class="container">
        <script type="text/javascript">
            document.title = 'Delete Account';
            window.history.pushState(
                null,
                null,
                '/Admin/Manage/DeleteAccount'
                );
        </script>

        <br /><br />
        <h2 class="text-center" style="color:#ffffff">@OnlineShoeShopAndChat.Resources.Language.DeleteAccountTitle</h2>
        <br /><br />

        <div class="col-md-6 panel panel-default">
            <div class="panel-body">
                <h3 class="text-center text-info">@OnlineShoeShopAndChat.Resources.Language.DeleteThisAccountRight</h3>
                <div>
                    <hr />
                    <dl class="dl-horizontal">
                        <dt>
                            @OnlineShoeShopAndChat.Resources.Language.FirstNameTitle:
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.FirstName)
                        </dd>

                        <dt>
                            @OnlineShoeShopAndChat.Resources.Language.LastNameTitle:
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.LastName)
                        </dd>

                        <dt>
                            @OnlineShoeShopAndChat.Resources.Language.GenderTitle:
                        </dt>

                        <dd>
                            @if(Model.Gender == "0")
                            {
                                <div>@OnlineShoeShopAndChat.Resources.Language.MrTitle</div>
                            }
                            @if (Model.Gender == "1")
                            {
                            <div>@OnlineShoeShopAndChat.Resources.Language.MsTitle</div>
                            }
                            @if (Model.Gender == "2")
                            {
                            <div>@OnlineShoeShopAndChat.Resources.Language.MrsTitle.</div>
                            }
                        </dd>

                        <dt>
                            @OnlineShoeShopAndChat.Resources.Language.CreatedAccountTitle:
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.CreationDate)
                        </dd>

                        <dt>
                            @OnlineShoeShopAndChat.Resources.Language.EmailTitle:
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Email)
                        </dd>

                    </dl>

                    @using (Html.BeginForm("DeleteAccount", "Manage", FormMethod.Post, new { @class = "form-horizontal" }))
                    {
                    @Html.AntiForgeryToken()

                        <div class="row">
                            <div class="text-center">
                                <input type="submit" value="@OnlineShoeShopAndChat.Resources.Language.DeleteBtn" class="btn btn-danger btn-lg" />
                                @Ajax.ActionLink(OnlineShoeShopAndChat.Resources.Language.BackTitle, "IndexPartialManage", "Manage",
                                    new AjaxOptions
                                    {
                                        UpdateTargetId = "ControlNavigationId",
                                        InsertionMode = InsertionMode.Replace,
                                        HttpMethod = "Get"
                                    },new { @class = "btn btn-warning btn-lg" })
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $('#ulControlNavigationId li').removeClass('active');
</script>
